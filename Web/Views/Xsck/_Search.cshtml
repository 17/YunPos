@using CySoft.Model.Tb
@using CySoft.Model.Td;
@using CySoft.Utility;



@{
    var pageList = ViewData["List"] as PageList<Td_Xs_1_QueryModel>;
    var digit = ViewData["DigitHashtable"] as System.Collections.Hashtable;//小数点控制
}



<table class="table m-b-none row1 selectAll-table status-box one-line" onmouseover="$.DHB.func.listOperate(this);" style="table-layout: fixed">
    <thead>
        <tr>
            <th width="55" class="table-p-l-sm table-p-r-xsm-fixed">序号</th>
            <th width="8%" class="text-center">开单日期</th>
            <th width="15%">单据编号</th>
            <th>出库门店</th>
            <th width="10%">客户名称</th>
            <th width="9%">经办人</th>
            <th width="8%">明细总金额</thwidth="5%">
            <th width="5%">
                操作
            </th>
        </tr>
    </thead>
    <tbody id="dwlist-main-tbody">
        @{
            if (pageList == null || pageList.Count == 0)
            {
                <tr>
                    <td colspan="8" align="center">
                        <img src="~/static/images/nodata.png" class="table_nodata">
                    </td>
                </tr>
            }
            else
            {
                var list = pageList.Items;
                if (list != null && list.Any())
                {
                    int index = 1;
                    foreach (var item in list)
                    {

                        <tr id="row-xsck-id-@item.id" class="tr-status-finished" onclick="app.xsck.select_dh(this);" data-value="@JSON.Serialize(item)" style="cursor:pointer">
                            <td class="text-center">
                                @(index++)
                            </td>
                            <td class="text-center">@string.Format("{0:yyyy-MM-dd}", item.rq)</td>

                            <td>@item.dh</td>
                            <td>@item.shop_name</td>
                            <td>@item.kh_name</td>
                            <td>@item.jbr_name</td>
                            <td class="align_right">@item.je_mxtotal.Digit((int)digit["dj_digit"])</td>

                            <td>
                                <a class="bg-state bg-state-info color-b fa fa-exchange blockbtn" title="选择" href="###"></a>
                            </td>
                        </tr>
                    }
                }
            }
        }
    </tbody>
</table>

















<script type="text/javascript">
    app.c.public_data['xsck/search'] = app.c.public_data['xsck/search'] || {};
    app.c.public_data['xsck/search']['_row_total_'] = '@pageList.ItemCount',
    app.c.public_data['xsck/search']['_page_size_'] = '@pageList.PageSize',
    app.c.public_data['xsck/search']['_current_page_'] = '@(pageList.PageIndex)';
</script>
