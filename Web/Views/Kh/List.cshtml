        if ($current_sort == 0) {
            $t.attr('slag', '1');
            $t.find('i').remove();
            $t.append(app.sort_icon.asc);
        } else if ($current_sort == 1) {
            $t.attr('slag', '0');
            $t.find('i').remove();
            $t.append(app.sort_icon.desc);
        }
    }
