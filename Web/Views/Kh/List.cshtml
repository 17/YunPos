    //绑定左侧商品分类树#modify_goods_info
    app.kh.bind_spfl_tree = function () {
        var tree_selector = '#tree_left';

        $(_ + tree_selector)
            .jstree("destroy")
            .jstree({
                'core': {
                    'data': {
                        'url': function (obj) {
                            return '/shopsp/get_left_tree?rd=' + new Date().getTime() + '&type=2';
                        }
                    },
                }
