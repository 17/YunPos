@using CySoft.Model.Tb;
@{
    List<Tb_Role_Module> item_edit = ViewData["item_edit"] as List<Tb_Role_Module>;
    item_edit = item_edit ?? new List<Tb_Role_Module>();
    string option = ViewData["option"].ToString();
