                    <div>
                        <div class="m-b">
                            <label class="l-h-30 text-right" style="width: 70px">
                                <span>权限详细</span>
                            </label>
                            <label class="sub-label w-340 m-l-xs">

                            </label>
                        </div>
                    </div>
                    <input type="hidden" id="hid_option" value="@option">
                    <input type="hidden" name="roleId" id="roleId" value="@ViewData["roleId"]"/>
                </div>
                <div>

                  
                </div>
                
