                datatype: 'json',             //服务器返回的数据类型
                beforeSend: null,             //发送请求前
                success: function (data) {
                            if (data.status == "success") {
                                $.DHB.message({ 'content': data.message, 'time': 1000, 'type': 's' });
                                $.DHB.url('dw/list', 'cache');
