    var spflTree, treeData;

    $.DHB._ = function () {
        app.c.public_data['shop/add'] = app.c.public_data['shop/add'] || {};
        if (app.c.public_data['shop/add']['once'] === false) {
            app.c.public_data['shop/add']['once'] = true;
        }
    };

    app.shop = app.shop || {};


</script>
