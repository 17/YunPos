        <form novalidate="novalidate" action="/shop/add" id="fm-shop-add">
            <!-- start main-content -->
            <div id="goods-main" class="main-content" tabcontent="goods-tab">
                <!-- 基础 -->
                <div class="m-b pad-t10">
                    <!--基本信息-->
                    <div class="fixed-input-group">
                        <h2 class="form_title"><span>基本信息</span></h2>
                        <div class="col-sm-12 form_content">
                        
                        
                        @*<div class="input-item-2 clearfix add-client">
                            <div>
                                <label class="item-2-label">
                                    <span>验证码：</span>
                                </label>
                                <label class="m-l-xs1">
                                    @shopModel.yzm
                                </label>
                               
                            </div>
                        </div>*@

                        <div class="input-item-2 clearfix add-client">
                            <div>
                                <label class="item-2-label">
                                    <span>门店编码：</span>
                                </label>
                                <label class="m-l-xs1">
                                    @shopModel.bm
                                </label>
                               
                            </div>
                        </div>
                        <div class="input-item-2 clearfix add-client">
                            <div>
                                <label class="item-2-label">
                                    <span>门店名称：</span>
                                </label>
                                <label class="m-l-xs1">
                                  @shopModel.mc
                                </label>
                            </div>
                        </div>
                          <div class="input-item-2 clearfix add-client">
                            <div>
                                <label class="item-2-label">
                                    <span>门店状态：</span>
                                </label>
                                <label class="m-l-xs1">
                                      @(shopModel.flag_state == 1 ? "正常" : "停用")                                                     
                                </label>
                            </div>
                        </div>
                        

                            <div class="input-item-2 clearfix add-client">
                                <div>
                                    <label class="item-2-label">
                                        <span>对应客户：</span>
                                    </label>
                                    <label class="m-l-xs1">
                                        @( (khModel!= null&&!string.IsNullOrEmpty(khModel.id)) ? khModel.mc: "未对应")
                                    </label>
                                </div>
                            </div>


                        </div>
                        
                    </div>


                    <!-- 商品图片 -->
                    <div class="fixed-input-group dis-table">
                        <h2 class="form_title"><span>门店图片</span></h2>
                        <div class="col-sm-12 form_content">
                        
                        <div class="input-item-1 clearfix">
                            <div class="add-img">
                                <ol id="img-list" class="clearfix m-l-xxl m-b-none">
                                    <li style="opacity: 1; z-index: auto; top: 0px; left: 0px;" id="img-list-1"  class="cover">
                                        <div class="wrap-img">
                                            <img id="img_pic_path" name="img_pic_path" src="@Html.Raw(string.IsNullOrEmpty(shopModel.pic_path) ? "/static/images/default.jpg" : shopModel.pic_path)" alt="">
                                        </div>
                                    </li>
                                </ol>
                            </div>
                        </div>
                        <input name="pic_path" id="pic_path" type="hidden" autocomplete="off" value="@Html.Raw(string.IsNullOrEmpty(shopModel.pic_path) ? "/static/images/default.jpg" : shopModel.pic_path)">
                       </div> 
                        
                    </div>


                    <!-- 联系信息 -->
                    <div class="fixed-input-group">
                        <h2 class="form_title"><span>联系信息</span></h2>
                        <div class="col-sm-12 form_content">
                        <div class="input-item-2 clearfix add-client">

                            <!-- 联系人 -->
                            <div class="input-item-2 clearfix add-client">
                                <label class="item-2-label">
                                   <span>联系人：</span>
                                </label>
                                <label class="m-l-xs1">
                                    @shopModel.lxr
                                </label>
                            </div>

                            <!-- 移动电话 -->
                            <div class="input-item-2 clearfix add-client">
                                <label class="item-2-label">
                                    <span>手机号码：</span>
                                </label>
                                <label class="m-l-xs1">
                                   @shopModel.phone
                                </label>
                            </div>

                            <!-- 座机电话 -->
                            <div class="input-item-2 clearfix add-client">
                                <label class="item-2-label">
                                    <span>电话号码：</span>
                                </label>
                                <label class="m-l-xs1">
                                   @shopModel.tel 
                                </label>
                            </div>

                            <!-- QQ -->
                            <div class="input-item-2 clearfix add-client">
                                <label class="item-2-label">
                                    <span>QQ：</span>
                                </label>
                                <label class="m-l-xs1">
                                    @shopModel.qq 
                                </label>
                            </div>


                            <!-- email -->
                            <div class="input-item-2 clearfix add-client">
                                <label class="item-2-label">
                                    <em class="tag">&nbsp; </em><span>电子邮箱：</span>
                                </label>
                                <label class="m-l-xs1">
                                    @shopModel.email 
                                </label>
                            </div>

                            <!-- 传真  -->
                            <div class="input-item-2 clearfix add-client">
                                <label class="item-2-label">
                                   <span>传真：</span>
                                </label>
                                <label class="m-l-xs1">
                                    @shopModel.fax 
                                </label>
                            </div>

                            <!-- 邮编  -->
                            <div class="input-item-2 clearfix add-client">
                                <label class="item-2-label">
                                    <span>邮编：</span>
                                </label>
                                <label class="m-l-xs1">
                                   @shopModel.zipcode 
                                </label>
                            </div>
                            <!-- 地址  -->
                            <div class="input-item-2 clearfix add-client">
                                <label class="item-2-label">
                                    <span>地址：</span>
                                </label>
                                <label class="m-l-xs1">
                                    @shopModel.address  
                                </label>
                            </div>
                           </div>
                            
                        </div>
                    </div>
                    <!-- 其它信息 -->
                    <div class="fixed-input-group dis-table">
                        <h2 class="form_title"><span>其它信息</span></h2>
                         <div class="col-sm-12 form_content">
                        <!-- 备注  -->
                        <div class="input-item-2 clearfix add-client">
                            <label class="item-2-label">
                               <span>备注：</span>
                            </label>
                            <label class="m-l-xs1">
                               @shopModel.bz   
                            </label>
                        </div>
                    </div>
                    </div>
                </div>

            </div>
            <!-- end main-content -->
            <footer class="panel-footer text-left lter need-footer-fixed need-footer-fixed-box">
                <input id="is_need_new" value="" autocomplete="off" type="hidden">

                <button type="button" class="btn w-138 btn-info" onclick="$.fn.menuTab.load({ url: '/shop/edit?id=@shopModel.id', 'title': '商品管理', id: 'shop/list', nocache: '0' }); " id="btn-goods-edit" data-loading-text="编辑中...">编辑门店</button>&nbsp;&nbsp;
                <button type="button" class="btn w-xs btn-default" title="全部门店" onclick="$.fn.menuTab.load({ url: '/shop/list', 'title': '门店管理', id: 'shop/list', nocache: '0' }); ">返回</button>
            </footer>
        </form>

    </div>

</div>

